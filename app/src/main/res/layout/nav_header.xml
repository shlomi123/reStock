<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="?attr/colorAccent"
    android:padding="6dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:orientation="horizontal"
    android:gravity="bottom">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="10dp"/>

    <ProgressBar
        android:id="@+id/progressBar_company_new_profile_upload"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminateTint="@color/colorPrimary"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/textView_distributor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/button_open_file_chooser_change_profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignStart="@id/profile_picture"
        android:layout_alignBottom="@id/profile_picture"
        android:layout_marginStart="55dp"
        android:layout_marginBottom="-5dp"
        android:background="@drawable/circular_choose_profile2"
        android:drawableStart="@drawable/ic_mode_edit_white_24dp"/>

</RelativeLayout>
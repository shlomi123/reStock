<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".STORE_ORDER_PRODUCT">

    <TextView
        android:id="@+id/textViewProductName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#000000"
        android:layout_above="@id/imageViewImageOfProduct"
        android:layout_marginBottom="-130dp"
        android:layout_centerHorizontal="true"
        android:textSize="23sp"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewImageOfProduct"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"/>

    <EditText
        android:id="@+id/editTextQuantity"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:hint="Quantity"
        android:inputType="number" />

    <Button
        android:id="@+id/buttonOrderSpecificProduct"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_alignBottom="@+id/editTextQuantity"
        android:background="@drawable/rounded_rectangle"
        android:textColor="@color/white"
        android:text="Order" />

    <TextView
        android:id="@+id/textViewUnitsPerPackage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="one order is a package of 24 items" />

</RelativeLayout>
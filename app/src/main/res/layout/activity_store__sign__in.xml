<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".STORE_SIGN_IN">

    <TextView
        android:id="@+id/textView_store_signIn_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textSize="72sp"
        android:textColor="@color/colorAccent"
        android:fontFamily="cursive"
        android:text="Sign In" />

    <EditText
        android:id="@+id/editText_store_signIn_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_below="@id/textView_store_signIn_title"
        android:hint="email@example.com"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editText_store_signIn_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editText_store_signIn_email"
        android:layout_marginTop="20dp"
        android:hint="password"
        android:ems="10"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/button_store_signIn"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/editText_store_signIn_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_rectangle"
        android:textColor="@color/white"
        android:text="sign in" />

    <TextView
        android:id="@+id/textView_store_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_store_signIn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="forgot password?"
        android:textColor="@color/colorAccent" />

    <ProgressBar
        android:id="@+id/progressBar_store_signIn"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <!--<Button
        android:id="@+id/button_store_change_user_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="change" />-->

</RelativeLayout>